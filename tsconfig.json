{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "esnext",
      "target": "ES6",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "*": ["./src/*"]
      }
    },
    "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "include": [
      "./config/jest/setupTests.ts",
      "./src/**/*.ts",
      "./src/**/*.tsx"
    ],
  }
  }